# Server Configuration
WEBSERVER_PORT=3000
WEBSERVER_URL=http://localhost
WEBSERVER_PROTOCOL=http
WEBSERVER_NAME=Auralix API
WEBSERVER_VERSION=1.0.0
WEBSERVER_DESCRIPTION=Social Media Backend API
WEBSERVER_AUTHOR=Your Name
WEBSERVER_LICENSE=MIT

# Environment
NODE_ENV=development

# JWT Configuration
# IMPORTANTE: Cambiar este secret en producción con un valor aleatorio y seguro
# Debe tener al menos 32 caracteres
JWT_SECRET=change-this-to-a-random-secret-minimum-32-characters-long-in-production

# Session Secret
# CRÍTICO: Genera un secret seguro con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=change_this_to_a_secure_random_string_minimum_64_characters_long

# Cookie Configuration
COOKIE_DOMAIN=localhost

# IP Whitelist (opcional, separado por comas para rate limiting)
# IP_WHITELIST=192.168.1.1,10.0.0.1

# CORS Origins (producción, separado por comas)
# ALLOWED_ORIGINS=https://tudominio.com,https://www.tudominio.com

# Database
DATABASE_PATH=./data/database.sqlite

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority&appName=YourApp
MONGODB_NAME=webserver

# Storage
STORAGE_DIR=./storage

# Logging
LOG_LEVEL=info

# CORS (separar múltiples orígenes con comas)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=change-this-session-secret-in-production

# Firebase Admin SDK (para Push Notifications)
# Opción 1: Usar variables de entorno (RECOMENDADO para producción/GitHub)
# Obtén estos valores de tu archivo firebase-adminsdk.json
FIREBASE_PROJECT_ID=earth-vibe-f4c0b
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@earth-vibe-f4c0b.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nTU_CLAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"

# Opción 2: Usar archivo local (solo desarrollo)
# Descarga firebase-adminsdk.json de Firebase Console
# Colócalo en la raíz de EV-B/ (NO lo subas a GitHub)
# El archivo debe estar en .gitignore
